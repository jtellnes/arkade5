<UserControl x:Class="Arkivverket.Arkade.GUI.Views.TestRunner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prism="http://prismlibrary.com/"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:models="clr-namespace:Arkivverket.Arkade.GUI.Models"
             xmlns:lang="clr-namespace:Arkivverket.Arkade.GUI.Languages"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="700"
             d:DataContext="{d:DesignData TestRunnerViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <Label Grid.Row="0" Margin="6" FontSize="24" Content="{x:Static lang:TestRunnerGUI.Title}"/>

        <Grid Grid.Row="2" Grid.Column="0" Margin="10" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220" />
                <ColumnDefinition Width="400" />
                <ColumnDefinition Width="50" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,5" FontWeight="Bold" Text="{x:Static lang:TestRunnerGUI.HeaderFilePath}"/>
            <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,5" FontWeight="Bold" Text="{x:Static lang:TestRunnerGUI.HeaderUUID}"/>
            <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,5" FontWeight="Bold" Text="{x:Static lang:TestRunnerGUI.HeaderArchiveType}"/>
            <TextBlock Grid.Row="3" Grid.Column="0" Margin="0,5" FontWeight="Bold" Text="{x:Static lang:TestRunnerGUI.HeaderProcessingFile}"/>
            <TextBlock Grid.Row="4" Grid.Column="0" Margin="0,5" FontWeight="Bold" Text="{x:Static lang:TestRunnerGUI.HeaderNumberOfProcessedFiles}" Visibility="{Binding AddmlFlatFileStatusVisibility}"/>
            <TextBlock Grid.Row="5" Grid.Column="0" Margin="0,5" FontWeight="Bold" Text="{x:Static lang:TestRunnerGUI.HeaderNumberofProcessedPosts}" Visibility="{Binding AddmlFlatFileStatusVisibility}"/>
            <TextBlock Grid.Row="5" Grid.Column="0" Margin="0,5" FontWeight="Bold" Text="{x:Static lang:TestRunnerGUI.HeaderNumberOfProcessedXmlElements}" Visibility="{Binding AddmlDataObjectStatusVisibility}"></TextBlock>

            <TextBlock Grid.Row="0" Grid.Column="1" Grid.ColumnSpan ="2" Margin="5" TextWrapping="Wrap" Text="{Binding ArchiveInformationStatus.ArchiveFileName}"/>
            <TextBlock Grid.Row="1" Grid.Column="1" Margin="5" Text="{Binding ArchiveInformationStatus.Uuid}"/>
            <TextBlock Grid.Row="2" Grid.Column="1" Margin="5" Text="{Binding ArchiveInformationStatus.ArchiveType}"/>
            <TextBlock Grid.Row="3" Grid.Column="1" Margin="5" Text="{Binding CurrentlyProcessingFile}"/>
            <TextBlock Grid.Row="4" Grid.Column="1" Margin="5" Text="{Binding NumberOfProcessedFiles}" Visibility="{Binding AddmlFlatFileStatusVisibility}"/>
            <TextBlock Grid.Row="5" Grid.Column="1" Margin="5" Text="{Binding NumberOfProcessedRecords}"/>

            <Expander Header="{x:Static lang:TestRunnerGUI.TestSelectionHeader}" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,5" Visibility="{Binding AddmlDataObjectStatusVisibility}">
                <StackPanel Orientation="Vertical" >
                    <CheckBox IsChecked="{Binding AllTestsSelected}" Content="{x:Static lang:TestRunnerGUI.TestSelectionChooseAllOrNoneCheckBoxText}" IsEnabled="{Binding CanSelectTests}"/>
                    <ScrollViewer Height="150">
                        <ListBox ItemsSource="{Binding Path=SelectableTests}" IsEnabled="{Binding CanSelectTests}">
                            <ListBox.Template>
                                <ControlTemplate TargetType="ItemsControl">
                                    <Border>
                                        <ItemsPresenter />
                                    </Border>
                                </ControlTemplate>
                            </ListBox.Template>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding Path=IsSelected}" Content="{Binding Path=DisplayName}"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                </StackPanel>
            </Expander>
            <StackPanel Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal">
                <Button Margin="20" HorizontalAlignment="Left" Content="{x:Static lang:TestRunnerGUI.StartTestingButtonText}" Width="130" Height="30" Command="{Binding StartTestingCommand}"/>
                <Button Margin="20" HorizontalAlignment="Left" Content="{x:Static lang:TestRunnerGUI.ShowTestReportButtonText}" Width="130" Height="30" Command="{Binding ShowReportCommand}"/>
                <Button Margin="20" HorizontalAlignment="Left" Content="{x:Static lang:TestRunnerGUI.CreatePackageButtonText}" Width="130" Height="30" Command="{Binding NavigateToCreatePackageCommand}"/>
                <Button Margin="20" HorizontalAlignment="Left" Content="{x:Static lang:TestRunnerGUI.NewProgramSessionButtonText}" Width="130" Height="30" Command="{Binding NewProgramSessionCommand}"/>
            </StackPanel>
            
        </Grid>

        <TextBlock Grid.Row="3" Grid.Column="0" FontWeight="Bold" Margin="10" Text="{x:Static lang:TestRunnerGUI.TestMessagesHeading}"/>
        <ScrollViewer Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" VerticalScrollBarVisibility="Auto" Margin="10">
            
            <ItemsControl ItemsSource="{Binding OperationMessages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:OperationMessage}">
                        <Border x:Name="Border" Padding="8" BorderThickness="1" BorderBrush="{DynamicResource MaterialDesignDivider}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="700"/>
                                </Grid.ColumnDefinitions>

                                <ProgressBar Visibility="{Binding ProgressBarVisibility}" Style="{StaticResource MaterialDesignCircularProgressBar}"                     
                             Value="0"
                             IsIndeterminate="True"
                             Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="12 12 12 12"/>

                                <materialDesign:Chip Visibility="{Binding StatusVisibility}" 
                                Grid.Column="0" Content="{Binding Label}"                                  
                                 IconBackground="{Binding Color}"
                                 IconForeground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                                 Margin="0 0 4 4">
                                    <materialDesign:Chip.Icon>
                                        <materialDesign:PackIcon Kind="{Binding Icon}"></materialDesign:PackIcon>
                                    </materialDesign:Chip.Icon>
                                </materialDesign:Chip>

                                <StackPanel Grid.Column="1" Margin="8 0 0 0">
                                    <TextBlock FontWeight="Bold" Text="{Binding Id}" TextWrapping="Wrap"/>
                                    <!--<TextBlock Text="{Binding Message}" TextWrapping="Wrap" Visibility="{Binding StatusVisibility}" />-->

                                    <TextBox Background="Transparent"
                                        BorderThickness="0"
                                        Text="{Binding Message, Mode=OneWay}"
                                        IsReadOnly="True"
                                        TextWrapping="Wrap" 
                                        TextAlignment="Left"
                                        Visibility="{Binding StatusVisibility}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
